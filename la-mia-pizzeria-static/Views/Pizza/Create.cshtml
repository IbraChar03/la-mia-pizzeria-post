@model Pizza

<div class="container">

    <form asp-controller = "Pizza" asp-action="Create" method="post">

        <div class="mb-3">
            <label>Name : </label>
            <input asp-for="Name" class="d-block w-100" />
        </div>
        <div class="mb-3">
            <label>Description : </label>
            <input asp-for="Description" class="d-block w-100" />
        </div>
 
        <div class="mb-3">
            <label>Price : </label>
            <input asp-for="Price"  class="d-block w-100" />
        </div>
        <div class="mb-3">
            <label>Image : </label>
            <input asp-for="Image" class="d-block w-100" />
        </div>
        <div class="text-end">
            <input type="submit" class="btn btn-small btn-info" value="Create">
        </div>
    </form>
</div>